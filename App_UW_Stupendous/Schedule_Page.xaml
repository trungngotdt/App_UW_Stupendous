<Page
    x:Class="App_UW_Stupendous.Schedule_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_UW_Stupendous"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="Btn_OK"
                Content="OK"
                Tapped="Btn_OK_Tapped"
                Height="50"
                Width="100"
                Margin="300,0,0,0"></Button>
        <TimePicker TimeChanged="TimePicker_TimeChanged"></TimePicker>
        <CalendarDatePicker Margin="0,100,0,0"
                            DateChanged="CalendarDatePicker_DateChanged"></CalendarDatePicker>
    </Grid>
</Page>
